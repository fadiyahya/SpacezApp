<p id="notice"><%= notice %></p>

<h1>Find the office space you need</h1>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Officetype</th>
      <th>Price</th>
      <th>Aminities</th>
      <th>City</th>
      <th>Location</th>
      <th>Rules</th>
      <th>Contacts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= image_tag listing.image.url(:medium) %></td>
        <td><%= listing.name %></td>
        <td><%= listing.officetype %></td>
        <td><%= listing.price %></td>
        <td><%= listing.aminities %></td>
        <td><%= listing.city %></td>
        <td><%= listing.location %></td>
        <td><%= listing.rules %></td>
        <td><%= listing.contacts %></td>
        <td><%= link_to 'Show', listing,  class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing),  class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', listing,  class: "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
