<div class="row">
  <h1>Find the office space you need</h1>

  <% @listings.each do |listing| %>
    <div class="col-md-4">
        <div class="thumbnail">
        <%= link_to image_tag(listing.image.url(:medium)), listing %>
        <div class="caption">
        <h3><%= listing.name %></h3>
        <p> Add by <strong><%= listing.user.name %></strong>  </p>
        <p> <strong> <%= listing.price %> </strong> SAR per workday</p>
        <p><%= listing.city %></p>
        <% if (user_signed_in?) && (current_user == listing.user) %>
          <%= link_to 'Edit', edit_listing_path(listing),  class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-link"  %>
          <% end %>
      </div>
     </div>
   </div>
<% end %>
</div>
<hr>
<div class="row">
<div class="col-md-4">
      <% if user_signed_in? %>
           <%= link_to 'Add a Workspace', new_listing_path, class: "btn btn-danger" %>
      <% end %>
    </div>
</div>