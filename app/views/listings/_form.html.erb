<%= form_for(@listing, :html => { :multipart => true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h4 class="alert alert-danger" role="alert"> These <%= pluralize(@listing.errors.count, "error") %> need to be fixed</h4>
      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :officetype %><br>
    <%= f.text_field :officetype, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :aminities %><br>
    <%= f.text_area :aminities, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
   <%= f.select :city, [['Jeddah','Jeddah'],['Riyadh','Riyadh'],['Dammam','Dammam']], class: "dropdown-menu" %>
  </div>
  <div class="form-group">
    <%= f.label :location %><br>
    <%= f.text_area :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rules %><br>
    <%= f.text_area :rules, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contacts %><br>
    <%= f.text_area :contacts, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
